<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrencyConverterActivity">

    <TextView
        android:id="@+id/txt_label_converter"
        android:text="Dollar to Pund Converter!"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20sp"
        app:layout_constraintVertical_bias="0.2"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edt_dollar"
        android:hint="Enter Dollar"
        app:layout_constraintTop_toBottomOf="@+id/txt_label_converter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"  />

    <Button
        android:id="@+id/btn_convert"
        app:layout_constraintTop_toBottomOf="@+id/edt_dollar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Convert"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"/>
    
    <TextView
        android:id="@+id/txt_result"
        android:text="Result will be here"
        app:layout_constraintTop_toBottomOf="@+id/btn_convert"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />
    
</androidx.constraintlayout.widget.ConstraintLayout>